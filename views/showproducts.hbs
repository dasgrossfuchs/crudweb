<div class="container pb-5">
    <table id="myTable" class="table table-striped table-responsive-md btn-table">
        <thead>
            <tr>
                <th>ID</th>
                <th class="th-sm">Name</th>
                <th class="th-sm">Price</th>
                <th class="th-sm">Picture</th>
                <th class="th-sm">Category</th>
                <th class="th-sm">Description</th>
                <th class="th-sm" colspan="2">Options </th>
            </tr>
        </thead>
        <tbody>
            {{#resultado}}
            <tr>
                <td>{{_id}}</td>
                <td>{{name}}</td>
                <td>{{price}}</td>
                <td>{{picture}}</td>
                <td>{{category}}</td>
                <td>{{description}}</td>
                <td>
                    <form action="/api/product/{{_id}}" method="GET">
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </form>
                </td>
                <td>
                    <form action="/api/product/{{_id}}?_method=delete" method="POST">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
            {{/resultado}}
        </tbody>
    </table>
</div>